{
  "name": "tt-components",
  "version": "0.1.18",
  "description": "tt-components组件库,基于ant-design-vue封装的常用组件",
  "main": "dist/tt-components.umd.js",
  "module": "dist/tt-components.es.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "examples": "pnpm -C examples dev",
    "build:all": "pnpm build && pnpm -C examples build",
    "format": "prettier --write src/**/*.{js,vue}",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm clean && pnpm build",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "release:patch": "pnpm version:patch && pnpm publish",
    "release:minor": "pnpm version:minor && pnpm publish",
    "release:major": "pnpm version:major && pnpm publish",
    "release": "standard-version",
    "release:dry": "standard-version --dry-run",
    "release:publish": "pnpm release && npm publish",
    "publish:check": "npm pack --dry-run",
    "publish:beta": "npm publish --tag beta",
    "publish:alpha": "npm publish --tag alpha",
    "prerelease": "pnpm clean && pnpm build && pnpm publish:check",
    "demo:release": "echo '🚀 这是一个发布演示命令，请使用 pnpm release:publish 进行实际发布'"
  },
  "keywords": [
    "vue",
    "vue3",
    "ui",
    "component",
    "draggable",
    "modal",
    "preview"
  ],
  "author": "HuareuT",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HuareuT/tt-components"
  },
  "bugs": {
    "url": "https://github.com/HuareuT/tt-components/issues"
  },
  "homepage": "https://github.com/HuareuT/tt-components#readme",
  "peerDependencies": {
    "@ant-design/icons-vue": ">=6.0.0",
    "ant-design-vue": ">=4.0.0",
    "vue": ">=3.0.0"
  },
  "devDependencies": {
    "@ant-design/icons-vue": "^6.1.0",
    "@vitejs/plugin-vue": "5.0.4",
    "ant-design-vue": "4.2.5",
    "dplayer": "^1.27.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "terser": "^5.43.1",
    "vite": "5.2.12",
    "vue": "3.4.27"
  }
}
